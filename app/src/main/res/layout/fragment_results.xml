<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp">


	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/result_string_questions"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Всего вопросов:"/>

		<TextView
			android:id="@+id/questions_size"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:text="10"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/result_string_true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Правильных ответов:"/>

		<TextView
			android:id="@+id/true_answers_size"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:text="5"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/result_string_false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Неправильных ответов:"/>

		<TextView
			android:id="@+id/false_answers_size"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:text="5"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/result"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Результат:"/>

		<TextView
			android:id="@+id/result_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:text="50%"/>
	</LinearLayout>

</LinearLayout>